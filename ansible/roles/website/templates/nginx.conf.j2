server {
    server_name  www.{{ item.domain }};
    rewrite ^(.*) http://{{ item.domain }}$1 permanent;
}

server {
        listen {% if item.ssl is defined %}443{% else %}80{% endif %};
        server_name {{ item.domain }};

        set $version 'release';
        if ($http_x_version) {
            set $version $http_x_version;
        }

        root   /var/www/{{ item.domain }}/$version/{{ item.web_dir | default('web') }};
        index {% if item.type|default(null) == 'symfony' %}{% if env == 'dev' %}app_dev.php{% else %}app.php{% endif %}{% else %}index.php{% endif %};

        # Logging
        {% if env != 'prod' %}
        access_log  /var/log/nginx/{{ item.domain }}.access.log;
        error_log  /var/log/nginx/{{ item.domain }}.error.log debug;
        {% else %}
        access_log  /var/log/nginx/access.log;
        error_log  /var/log/nginx/error.log warn;
        {% endif %}

        # serve static files directly
        location ~* ^.+.(jpg|jpeg|gif|css|png|js|ico|html|xml|txt)$ {
            {% if env == 'prod' %}
            access_log        off;
            expires           max;
            {% endif %}
        }
 
        location ~ \.php$ {
                try_files $uri =404;
                include /etc/nginx/fastcgi_params;

                fastcgi_pass unix:/var/run/{{ item.domain }}.sock;
                fastcgi_index {% if item.type|default(null) == 'symfony' %}{% if env == 'dev' %}app_dev.php{% else %}app.php{% endif %}{% else %}index.php{% endif %};
                fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        }
}
